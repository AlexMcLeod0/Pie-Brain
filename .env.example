# Pie-Brain environment variables
# Copy this file to .env and fill in your values

# Telegram bot token (from @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Default cloud brain to use ("claude_code" or "aider")
DEFAULT_CLOUD_BRAIN=claude_code

# Ollama model name for routing
OLLAMA_MODEL=qwen2.5:1.5b

# Path to SQLite database
DB_PATH=~/.pie-brain/tasks.db

# Directory for log files
LOG_DIR=~/.pie-brain/logs

# Brain inbox directory (Markdown outputs land here)
BRAIN_INBOX=~/brain/inbox

# User preferences file prepended to every routing prompt
USER_PREFS_PATH=~/brain/profile/user_prefs.md

# Max concurrent LLM inferences (keep 1 on Pi 4 to prevent OOM)
LLM_SEMAPHORE_LIMIT=1

# Max concurrent cloud brain instances
CLOUD_BRAIN_SEMAPHORE_LIMIT=1
